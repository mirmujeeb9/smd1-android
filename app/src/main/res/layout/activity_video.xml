<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".photovideo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="#D3D3D3"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/close"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="25dp">

        </ImageView>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/brightness"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="20dp"
            >

        </ImageView>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/clock"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="20dp">

        </ImageView>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/circlegallery1"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp">

        </ImageView>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/middlecam"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp">

        </ImageView>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/backcam"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp">

        </ImageView>







    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:paddingLeft="0dp">


        <Button
            android:id="@+id/photoButton"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/round_submitbuttonwhite"
            android:text="Photo"
            android:textColor="#070707"
            android:layout_marginLeft="100dp">

        </Button>

        <Button
            android:id="@+id/VideoCall"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/round_submitbutton"
            android:layout_marginLeft="30dp"
            android:text="Video"
            android:textColor="#000000">

        </Button>
    </LinearLayout>




</LinearLayout>