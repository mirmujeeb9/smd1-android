<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".photovideo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="#D3D3D3"
        android:orientation="horizontal">

       <TextView
           android:layout_marginLeft="10dp"
           android:layout_width="80dp"
           android:layout_height="wrap_content"
           android:textSize="20dp"
           android:textStyle="bold"
           android:text="00:58"
           android:layout_marginTop="20dp">
       </TextView>

        <ImageView
            android:layout_width="200dp"
            android:layout_marginLeft="90dp"
            android:layout_height="230dp"
            android:src="@drawable/roundedsquarewhite"
            android:layout_marginTop="20dp"
            >

        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/mute"
            android:src="@drawable/backcam"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp">

        </Button>
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/camoff"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="25dp">

        </Button>
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/rotatecam"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="25dp">

        </Button>
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/cancelvideocall"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="25dp">

        </Button>
        <Button
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:background="@drawable/videosmallsquaregrey"
            android:layout_marginTop="-25dp"
            android:layout_marginLeft="-230dp">


        </Button>







    </LinearLayout>






</LinearLayout>