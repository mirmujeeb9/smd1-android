<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".photovideo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="#D3D3D3"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Caller Name"
            android:textSize="25dp"
            android:textColor="#000000"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="130dp">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:58"
            android:textSize="20dp"
            android:textColor="#9C9C9C"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="170dp">
        </TextView>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/mute"
            android:src="@drawable/backcam"
            android:layout_marginTop="20dp"
            android:layout_marginRight="-50dp"
            android:layout_marginLeft="40dp">

        </Button>
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/pause"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="90dp">

        </Button>


        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/loudspeaker">

        </Button>

        <Button
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:layout_marginLeft="-230dp"
            android:layout_marginTop="-45dp"
            android:background="@drawable/videosmallsquaregrey">


        </Button>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">


        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/cancelvideocall">

        </Button>
    </LinearLayout>






</LinearLayout>